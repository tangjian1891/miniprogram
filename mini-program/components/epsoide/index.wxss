.container {
  display: inline-flex;
  line-height: 30rpx;
  /* align-items: baseline; */
}

.index-container {
  display: flex;
  align-items: baseline;
}

.plain {
  font-size: 16px;
}

.index {
  font-size: 30px;
  font-weight: 800;
  margin-right: 7px;
  line-height: 30px;
}

.vertical-line {
  margin-right: 7px;
  height: 22px;
  border-right: 1px solid black;
}

.date {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.month {
  font-size: 12px;
  line-height: 12px;
  padding-bottom: 2px;
  margin-right: 2rpx;
  justify-content: center;
  /* padding-right:4rpx; */
}

.year {
  margin-top: 5px;
  font-size: 14px;
  line-height: 10px;
  padding-bottom: 3px;
}
